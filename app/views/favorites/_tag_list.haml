#tag_list
  %h2 Tags
  %ul.listed_tags
    -if current_user.tags.empty?
      %li
        Why not add some tags?
    -else
      -current_user.tags.each do |tag|
        %li
          =link_to tag.name, {:action => :index, :tag => tag.url}, {:title => "view all tweets tagged '#{tag.name}'"}
          %br
          =link_to "delete", {:action => :delete, :controller => 'tags', :tag => tag.name}, {:title => "delete '#{tag.name}' tag", :class => "delete_tag_link"}
            