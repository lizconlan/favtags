#navbar
  =current_user.name
  = "/"
  =link_to "favorites", :controller => :favorites
  = "/"
  %h2= @tweets.first.twitterer_name

.faves
  - form_tag('/favorites/tag') do    
    .page_info
      -if @current_page > 1
        =link_to "&lt;&lt; Prev", :controller => :favorites, :action => :tweep, :page => @current_page - 1
      = "  Page #{@current_page} of #{@max_page}  "
      -if @current_page < @max_page
        =link_to "Next &gt;&gt;", :controller => :favorites, :action => :tweep, :page => @current_page + 1
        
    .controls
      .control_text
        Actions: 
        =hidden_field_tag :page, params[:page]
        =hidden_field_tag :from, "tweep"
        = select_tag :tag_choices, options_for_select(@tag_options), :onchange => "this.form.submit();"
        %noscript
          =submit_tag :submit
        
    .timeline
      = render :partial => "tweet", :collection => @tweets
  
    .page_info
      -if @current_page > 1
        =link_to "&lt;&lt; Prev", :controller => :favorites, :action => :tweep, :page => @current_page - 1
      = "  Page #{@current_page} of #{@max_page}  "
      -if @current_page < @max_page
        =link_to "Next &gt;&gt;", :controller => :favorites, :action => :tweep, :page => @current_page + 1
        
=render :partial => "tag_list"