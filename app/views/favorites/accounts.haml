.page-header
  %h2= "Faved Accounts"
  
=render :partial => "tabs"

%div{:class => "account_list"}
  - if @accounts.empty?
    .tweet_fail
      %p
        Looks like you have no favorites stored. Maybe you should
        %a{:href => "/favorites/load"} load some
  - else
    .span9
      .row
        .span4
          -@accounts[0..(@accounts.count/2).ceil].each do |account|
            %p
              = link_to account[:name], :controller => 'favorites', :action => 'index', :account => account[:name]
              = "(#{account[:count]})"
        .span4
          -@accounts[(@accounts.count/2).ceil+1..@accounts.count].each do |account|
            %p
              = link_to account[:name], :controller => 'favorites', :action => 'index', :account => account[:name]
              = "(#{account[:count]})"