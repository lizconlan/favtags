%h2
  = "Favorites tagged &quot;" + @tag + "&quot;"

%br

%div.faves
  - form_tag('/favorites/tag') do
    %div.controls
      =hidden_field_tag :page, params[:page]
      =hidden_field_tag :from, "tags"
      = select_tag :tag_choices, options_for_select(@tag_options), :onchange => "this.form.submit();"
      %noscript
        =submit_tag :submit

    %div.page_info
      -if @current_page > 1
        =link_to "&lt;&lt; Prev", :controller => :favorites, :action => :tags, :tag => @tag, :page => @current_page - 1
      = "  Page #{@current_page} of #{@max_page}  "
      -if @current_page < @max_page
        =link_to "Next &gt;&gt;", :controller => :favorites, :action => :tags, :tag => @tag, :page => @current_page + 1

    %div.timeline
      = render :partial => "tweet", :collection => @tweets

    %div.page_info
      -if @current_page > 1
        =link_to "&lt;&lt; Prev", :controller => :favorites, :action => :tags, :tag => @tag, :page => @current_page - 1
      = "  Page #{@current_page} of #{@max_page}  "
      -if @current_page < @max_page
        =link_to "Next &gt;&gt;", :controller => :favorites, :action => :tags, :tag => @tag, :page => @current_page + 1
        
=render :partial => "tag_list"