%ul
  %li=link_to current_user.name, "settings_url"
  - if @tag
    %li=link_to "favorites", :controller => :favorites
    = "/"
    %li
      %h2= "tagged: #{@tag}"
  - elsif @account
    =link_to "favorites", :controller => :favorites
    -if @favorites.first
      = "/"
      %li
        %h2= "posted by: #{@favorites.first.twitterer_name}"
  - else
    %li
      %h2 favorites

.faves
  - form_tag('/favorites/tag') do
    .page_info
      =render :partial => "navigation"
        
    .controls
      .control_text
        Actions: 
        =hidden_field_tag :page, params[:page]
        =hidden_field_tag :account, @account
        =hidden_field_tag :tag, @tag
        = select_tag :tag_choices, options_for_select(@tag_options), :onchange => "this.form.submit();"
        %noscript
          =submit_tag :submit
              
    .timeline
      - if @favorites.nil?
        ="No favorites loaded"
      - else
        -@show_tweep = true
        =render :partial => "tweet", :collection => @favorites

    .page_info
      =render :partial => "navigation"
        
=render :partial => "tag_list"