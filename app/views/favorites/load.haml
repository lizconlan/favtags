#page_head
  =link_to "#{current_user.name}'s favorites", :controller => :favorites
  &nbsp;&gt;&nbsp;
  %h2 Load favorites
    
#section
  %article
    .text_panel
      %p
        You are about to load your favorites from Twitter
        
      %p
        Twitter allows you a limited number of API calls per hour. You currently have 
        
        %strong #{@current_user.api_calls[0]}
        
        such calls remaining, which will be reset at #{@current_user.api_calls[1]}
        
      %p
        Each set of 20 favorites that you load will cost you 1 API call
        
      %p
        Press OK to continue...
        
      - form_tag('/favorites/load') do
        %input{:type => 'submit', :value => 'OK, load my favorites'}