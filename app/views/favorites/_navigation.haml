-if @current_page > 1
  =link_to "&lt;&lt; Prev", :controller => :favorites, :action => :index, :page => @current_page - 1, :tag => @tag, :account => @account
= "  Page #{@current_page} of #{@max_page}  "
-if @current_page < @max_page
  =link_to "Next &gt;&gt;", :controller => :favorites, :action => :index, :page => @current_page + 1, :tag => @tag, :account => @account