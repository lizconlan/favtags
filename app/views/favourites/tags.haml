%p
  Tag: 
  = @tag

%div.page_info
  -if @current_page > 1
    =link_to "&lt;&lt; Prev", :controller => :favourites, :action => :tags, :page => @current_page - 1
  = "  Page #{@current_page} of #{@max_page}  "
  -if @current_page < @max_page
    =link_to "Next &gt;&gt;", :controller => :favourites, :action => :tags, :page => @current_page + 1

%div.timeline
  = render :partial => "tweet", :collection => @tweets
  
%div.page_info
  -if @current_page > 1
    =link_to "&lt;&lt; Prev", :controller => :favourites, :action => :tweep, :page => @current_page - 1
  = "  Page #{@current_page} of #{@max_page}  "
  -if @current_page < @max_page
    =link_to "Next &gt;&gt;", :controller => :favourites, :action => :tweep, :page => @current_page + 1