%p
  %a{:href=>"http://twitter.com/"+current_user.login}
    %img{:src=>current_user.profile_image_url}
%p
  = current_user.name + ", "
  = current_user.location
  
%p
  = current_user.favourites_count.to_s + " favourites on Twitter"

%p 
  = current_user.favourites.count.to_s + " favourites stored on Favtags"
  
%div.timeline
  -@show_tweep = true
  =render :partial => "tweet", :collection => @favourites